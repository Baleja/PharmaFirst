# PharmaFirst Environment Variables
# Copy this file to .env.local and fill in your actual values

# ================================
# Database (Supabase)
# ================================
DATABASE_URL="postgresql://user:password@host:5432/pharmafirst"
DIRECT_URL="postgresql://user:password@host:5432/pharmafirst"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ================================
# Authentication (Supabase Auth)
# ================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ================================
# LiveKit (Real-time Voice)
# ================================
LIVEKIT_URL="wss://your-livekit-server.livekit.cloud"
LIVEKIT_API_KEY="your-api-key"
LIVEKIT_API_SECRET="your-api-secret"
LIVEKIT_SIP_INBOUND_URI="sip:your-trunk@sip.livekit.io"

# ================================
# Twilio (PSTN Connectivity)
# ================================
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+44xxxxxxxxxx"
TWILIO_SIP_TRUNK_ID="your-trunk-id"

# ================================
# ElevenLabs (Text-to-Speech)
# ================================
ELEVENLABS_API_KEY="your-api-key"
ELEVENLABS_DEFAULT_MODEL="eleven_turbo_v2"
ELEVENLABS_VOICE_EN_GB="voice-id-british"
ELEVENLABS_VOICE_ES_ES="voice-id-spanish"
ELEVENLABS_VOICE_UR_PK="voice-id-urdu"

# ================================
# OpenAI (LLM for Voice Agent)
# ================================
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_WHISPER_MODEL="whisper-1"

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY="sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ================================
# Fal (Video Generation)
# ================================
FAL_API_KEY="your-fal-api-key"
FAL_TEMPLATE_MEDICATION_GUIDE="fal-template-123"
FAL_TEMPLATE_CONDITION_EDUCATION="fal-template-456"

# ================================
# Veed (Video Post-Editing)
# ================================
VEED_API_KEY="your-veed-api-key"
VEED_WEBHOOK_SECRET="your-webhook-secret"
VEED_TEMPLATE_LOGO="veed-template-logo"
VEED_TEMPLATE_INTRO="veed-template-intro"

# ================================
# Valyu (Medical Knowledge Search)
# ================================
VALYU_API_KEY="your-valyu-api-key"
VALYU_API_URL="https://api.valyu.ai"

# ================================
# ApeAI (Social Media Automation)
# ================================
APEAI_API_KEY="your-apeai-api-key"

# ================================
# DLT (Data Migration)
# ================================
DLT_PIPELINE_NAME="pmr_migration"
DLT_DESTINATION="pharmafirst_db"

# ================================
# Redis / Upstash (Caching)
# ================================
UPSTASH_REDIS_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_TOKEN="your-token"

# ================================
# Storage (Cloudflare R2 or AWS S3)
# ================================
# Cloudflare R2
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key"
R2_SECRET_ACCESS_KEY="your-secret-key"
R2_BUCKET_NAME="pharmafirst-recordings"
R2_PUBLIC_URL="https://your-bucket.r2.cloudflarestorage.com"

# Or AWS S3
# AWS_REGION="eu-west-2"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# S3_BUCKET_NAME="pharmafirst-recordings"

# ================================
# NHS PharmOutcomes
# ================================
PHARMOUTCOMES_API_URL="https://api.pharmoutcomes.org"
PHARMOUTCOMES_API_KEY="your-api-key"
PHARMOUTCOMES_ORG_CODE="your-org-code"

# ================================
# Monitoring & Observability
# ================================
# Sentry
SENTRY_DSN="https://xxxxxx@sentry.io/xxxxxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="pharmafirst"
SENTRY_AUTH_TOKEN="your-auth-token"

# PostHog
NEXT_PUBLIC_POSTHOG_KEY="phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ================================
# Application Settings
# ================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="PharmaFirst"

# Node environment
NODE_ENV="development"

# ================================
# Security
# ================================
# JWT Secret (for custom auth flows)
JWT_SECRET="your-random-secret-key-min-32-chars"

# Encryption key for PMR credentials
ENCRYPTION_KEY="your-encryption-key-32-bytes"

# Webhook signing secrets
WEBHOOK_SECRET="your-webhook-secret"

# ================================
# Feature Flags (Optional)
# ================================
ENABLE_VIDEO_GENERATION="true"
ENABLE_SOCIAL_MEDIA_POSTS="false"
ENABLE_VOICE_CLONING="false"

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# ================================
# Development & Testing
# ================================
# Skip certain validations in development
SKIP_ENV_VALIDATION="false"

# Mock external APIs in development
MOCK_EXTERNAL_APIS="false"

# Log level (debug, info, warn, error)
LOG_LEVEL="info"
